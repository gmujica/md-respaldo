<div class="content-area" style="grid-template-columns: auto;background-color: #fff;" id="datos_empresa">
    <div class="register-auction-body register-container">
     

        <div class="content-area" style="grid-template-columns: auto;background-color: #fff" id="datos_cuentas_bancarias">

            <div class="popup-container hidden confirmation-popup" style="z-index: 2000" id="remove_cuenta">
                <div class="popup">
                    <span class="cross" data-bind="click:$root.closeRemoveCuenta"></span>
                    <div class="popup-content alert">
                        <div class="exclamation-circle">!</div>
                        <div class="alert-title">Eliminar cuenta bancaria</div>
                        <div class="alert-subtitle">¿Está seguro de continuar?</div>
                        <div class="btn blue-style close-popup-btn" data-bind="click:$root.removeCuentaBancaria"><span class="btn-text">Aceptar</span></div>
                    </div>
                </div>
            </div>

            <bank-registration>
                <div class="register-auction-content">
                    <div class="register-auction-body register-container bank-registration-container">
                        <div class="main-header-container">
                            <div class="main-title">
                                <div>
                                    <div class="main-title-icon"></div>
                                    Configura tus Cuentas Bancarias
                                </div>
                            </div>
                            @*<div class="main-parragraph">
                                    Necesitamos una cuenta en Soles y una cuenta en Dólares. Por seguridad sólo cuentas del titular
                                </div>*@
                        </div>
                        <div class="bank-registration-content">
                            <bank-list>
                                <table class="k-table k-thover k-trow-pointer">
                                    <thead class="k-thead">
                                        <tr class="k-throw">
                                            <th>Cuenta</th>
                                            <th>Banco</th>
                                            <th>Moneda</th>
                                            <th>Tipo de Cuenta</th>
                                            <th>N° de Cuenta</th>
                                            <th>Estado</th>
                                            @*<th>CCI</th>*@
                                            <!-- ko if: $root.verAgregarCuenta() != 3  -->
                                            <th></th>
                                            <!-- /ko -->
                                        </tr>
                                    </thead>
                                    <tbody class="k-tbody" data-bind="foreach:cuentasBancarias">
                                        <!-- ko if: $data.estado() == 1  -->
                                        <tr>
                                            <td>
                                                <span data-bind="text: 'N°' + ($index() + 1)"></span>
                                            </td>
                                            <td>
                                                <span>
                                                    <img width="50" data-bind="attr:{'src':$data.logo}" />
                                                </span>
                                            </td>
                                            <td>
                                                <span data-bind="text:$data.monedatext"></span>
                                            </td>
                                            <td>
                                                <span data-bind="text:$data.tipoCuentaText"></span>
                                            </td>
                                            <td>
                                                <span data-bind="text:$data.nroCuenta"></span>
                                            </td>
                                            <td>
                                                <span data-bind="text:$data.estadoNombre"></span>
                                            </td>
                                            @*<td>
                                                <span data-bind="text:$data.nroCCI"></span>
                                            </td>*@
                                            <!-- ko if: $root.verAgregarCuenta() != 3  -->
                                            <td>
                                                <div class="icon tach" data-bind="click:$root.openRemove"></div>
                                            </td>
                                            <!-- /ko -->
                                        </tr>
                                        <!-- /ko -->
                                    </tbody>
                                </table>
                            </bank-list>
                            <!-- ko if: $root.verAgregarCuenta() != 3  -->
                            <bank-form>
                                <div class="bank-form">
                                    <div class="sub-title">Agregar Nueva Cuenta</div>
                                    <div class="bank-form-content" data-bind="with:$root.cuentaBanco">

                                        <fancy-input id="account-number" placeholder="">
                                            <div class="fancy-input-content">
                                                <div class="fake-placeholder">Banco</div>

                                                <select id="combo_Bancos" class="custom-select" data-bind="value:$data.banco">
                                                    <option value="">Seleccione Banco</option>
                                                    <!-- ko foreach:$root.lstBancos -->

                                                    <option data-bind="value:$data,text:$data.nombre,attr:{'data-img':$data.icon}"></option>
                                                    <!-- /ko -->
                                                </select>
                                            </div>
                                        </fancy-input>

                                        <fancy-input id="account-number" placeholder="">
                                            <div class="fancy-input-content">
                                                <div class="fake-placeholder">Moneda</div>

                                                <select class="custom-select" data-bind="options:$root.lsttiposMoneda,optionsCaption:'Seleccione Moneda',optionsText:'text',value:$data.moneda"></select>
                                            </div>
                                        </fancy-input>

                                        <fancy-input id="account-number" placeholder="">
                                            <div class="fancy-input-content">
                                                <div class="fake-placeholder">Tipo de Cuenta</div>

                                                <select class="custom-select" id="tipocuenta" data-bind="options:$root.lstTipoCuentaBancaria,optionsCaption:'Tipo de Cuenta',optionsText:'text',value:$data.tipoCuenta"></select>
                                            </div>
                                        </fancy-input>

                                        <fancy-input id="account-number" placeholder="N° de Cuenta">
                                            <div class="fancy-input-content">
                                                <div class="fake-placeholder">N° de Cuenta</div>
                                                <input id="cuenta_bancaria" data-bind="value:$data.nroCuenta" type="text">
                                            </div>
                                        </fancy-input>
                                        <div style="display: grid; grid-template-columns: auto auto; grid-template-rows: 1fr; grid-column-gap: 10px;">
                                            <div>
                                                <div class="btn blue-bordered" data-bind="click:$root.addCuenta"><span class="btn-text">+ Agregar</span></div>
                                            </div>
                                            <div>
                                                <div id="confirmar_bancos_" data-bind="click:$root.modificarCuentas" class="btn regular" style="width: auto !important; height: 100% !important; border: 1px solid transparent !important;">
                                                    <span class="btn-text">Guardar</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </bank-form>
                            <!-- /ko -->

                        
                        </div>
                    </div>
                </div>
            </bank-registration>
        </div>



    </div>

</div>

