@{
    ViewBag.Title = "Recuperar Password";
    Layout = "~/Views/Shared/_LayoutPublico.cshtml";
}

<forgotten-password>
    <div class="form-base-container-content" data-bind="with:$root.emailContext">
        <div class="dark-logo"></div><div class="exit-btn"></div><div class="form-content">
            <div class="form-base-title">¿Has olvidado tu contrasena?</div><div class="parragraph-container">
                <p>Ingresa tu correo electrónico y te</p>
                <p>enviaremos un link para restablecer tu contrase&ntilde;a</p>
            </div><div class="form">
                <base-input type="text" placeholder="Ingresa tu dirección de correo">
                    <div class="base-input-content">
                        <input value="" placeholder="Ingresa tu dirección de correo" type="text" data-bind="value:$data.email">
                    </div>
                </base-input>
                <div class="base-btn" data-bind="click:$root.confirmar">
                    <span class="base-btn-text">Enviar</span>
                </div>
            </div>
        </div>
    </div>
</forgotten-password>

<div class="popup-container hidden" id="popup_msm">
    <div class="popup">
        <span onclick="closeModal('#popup_msm');" class="cross"></span>
        <div class="popup-content alert">
            <div class="exclamation-circle">!</div>
            <div class="alert-title" id="title_popup">La Mesa De Dinero</div>
            <div class="alert-subtitle" id="message_popup">Se le envio un correo para que pueda recuperar su password.</div>
            <a href="@Url.Action("","Acceso")" class="btn blue-style" id="footer_popup">
                <span style="text-decoration: none; color: #ffffff;"><span class="btn-text" style="">Aceptar</span></span>
            </a>

        </div>
    </div>
</div>

@section Scripts {

    <script>

    function closeModal(modal) {

        $(modal).addClass('hidden');

    };

    </script>

    <script src="~/Content/js/app/Registro/RecuperarContrasena.js"></script>
}


