<div class="popup-container hidden ficha-popup ficha-person" id="ficha_perfil">
    <div class="popup"  >
        <span class="cross"></span>
        <div class="popup-content">
            <person-registration>
                <div class="register-auction-content" data-bind="with:$root.EditContext"  >
                    <div class="register-auction-body register-container" >
                        <div class="main-header-container">
                            <div class="main-title">Perfil Usuario</div>
                        </div>
                   
                        <dashboard-list>
                            <div>
                                <div class="table-responsive" data-bind="with:$root.lstperfil" style="width: 50%;margin:auto;">
                                    <table class="k-table k-thover k-trow-pointer">
                                        <thead class="k-thead">
                                            <tr class="k-throw">
                                                <th>Nº</th>
                                                <th>Nombre</th>
                                                <th>Activar</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody class="k-tbody" data-bind="foreach:$data.datasource">
                                            <tr>
                                                <td>
                                                    <span data-bind="text: 'N°' + ($index() + 1)"></span>
                                                </td>
                                                <td>
                                                    <span data-bind="text:$data.nombre"></span>
                                                </td>
                                                <td style="width:30px;">

                                                    <label class="k-content-radio">
                                                        <input type="checkbox" name="acepto_terminos" data-bind="checked:$data.checkActivo" />
                                                        <div class="k-radioButtom-icon"></div>
                                                    </label>

                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    @Html.Partial("_Pagination")
                                </div>


                            </div>
                        </dashboard-list>


                        <div class="block-1-3">
                            <div class="observations">

                            </div>
                            <div class="button-row">
                                <div class="btn btn-green" data-bind="click:$root.asignarPerfil"><span class="btn-text">Guardar</span></div>
                                <div class="btn btn-red" data-bind="click:$root.closeModalPerfil"><span class="btn-text">Cancelar</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </person-registration>
         
       
        </div>
    </div>
</div>

<div class="popup-container confirmation-popup hidden" style="z-index: 2000" id="modal_remove_cargo">
    <div class="popup" style="min-width: 270px;" data-bind="with:$root.EliminarContext">
        <span class="cross"></span>
        <div class="popup-content alert" style="    font-size: 15px;">
            <div class="exclamation-circle">!</div>
            <div class="alert-title">Eliminar Cargo</div>
            <div class="alert-subtitle">¿Está seguro de continuar?</div>
            <div class="btn blue-style" data-bind="click:$root.eliminar" style="height: 26px;max-width: 30%;font-size: 11px;margin-top: 10px;"><span class="btn-text">Aceptar</span></div>
        </div>
    </div>
</div>




