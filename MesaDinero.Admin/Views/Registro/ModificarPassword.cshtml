        .user-area.with-menu .user-area-content {
            grid-template-columns: 1fr auto 1fr;
            width: 100%;
            justify-self: stretch;
            align-self: stretch;
            grid-column: 3 / 4 !important;
        }
</style>

@*<div class="content-area">*@
<div class="complex-dashboard-content" style="padding: 100px 0;">
    <div class="form-content" style="margin: auto; width: 42%;" data-bind="with:$root.passwordContext">
        <div class="form-base-title">Cambiar contraseña</div>
        <div class="form">
            <base-input type="password" placeholder="Ingrese su contraseña actual">
                <div class="base-input-content">
                    <input id="pwdActual" placeholder="Ingrese su contraseña actual" data-bind="value:$data.passwordActual" type="password">
                    <span  class="view" onclick="tooglePassword('#pwdActual');"></span>
                </div>
            </base-input>
            <base-input type="password" placeholder="Ingrese su nueva contraseña">
                <div class="base-input-content">
                    <input id="pwdNueva" placeholder="Ingrese su nueva contraseña" data-bind="value:$data.password" type="password">
                    <span class="view" onclick="tooglePassword('#pwdNueva');"></span>
                </div>
            </base-input>
            <base-input type="password" placeholder="Repetir contraseña">
                <div class="base-input-content">
                    <input id="pwdReNueva" placeholder="Confirmar su nueva contraseña" data-bind="value:$data.rePassword" type="password">
                    <span class="view" onclick="tooglePassword('#pwdReNueva');"></span>
                </div>
            </base-input>
            <div class="base-btn" data-bind="click:$root.modificarPassword">
                <span class="base-btn-text">Crear contraseña</span>
            </div>
        </div>
    </div>
</div>

